{
    "subdoc_source": {
        "_id": { "auto": false },
        "mode": {
            "type": "String",
            "required": true,
            "enum": [ "file", "stream" ]
        },
        "url": {
            "type": "String",
            "required": true
        }
    },
    "subdoc_pipelines": {
        "_id": { "auto": false },
        "name": {
            "type": "String",
            "required": true
        },
        "params": {
            "type": "Object",
            "required": true
        }
    },
    "analyzers": {
        "name": {
            "type": "String",
            "required": true,
            "unique": true
        },
        "type": {
            "type": "String",
            "enum": [ "tripwire" ]
        },
        "enabled": {
            "type": "Boolean",
            "default": false
        },
        "source": "SUBDOC_SOURCE",
        "pipelines": [ "SUBDOC_PIPELINES" ]
    }
}
